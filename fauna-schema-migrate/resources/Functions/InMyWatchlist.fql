CreateFunction(
  {
    name: "InMyWatchlist",
    body: Query(
      Lambda(
        "id",
        IsNonEmpty(
          Select(
            ["data"],
            Paginate(
              Match(Index("no_duplicate_shows_in_watchlist"), [
                Call(Function("ExtCurrentIdentity"), []),
                Ref(Collection("Shows"), Var("id"))
              ])
            )
          )
        )
      )
    )
  }  
)